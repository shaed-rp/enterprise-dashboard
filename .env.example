# DealerBuilt Enterprise Dashboard - Environment Configuration
# Copy this file to .env and update with your actual values

# DealerBuilt API Configuration
DEALERBUILT_USERNAME=your_dealerbuilt_username
DEALERBUILT_PASSWORD=your_dealerbuilt_password
DEALERBUILT_SOURCE_ID=your_source_id
DEALERBUILT_COMPANY_ID=your_company_id
DEALERBUILT_STORE_ID=your_store_id
DEALERBUILT_SERVICE_LOCATION_ID=your_service_location_id

# Database Configuration (for production PostgreSQL)
POSTGRES_PASSWORD=your_secure_postgres_password

# Application Configuration
FLASK_ENV=production
SECRET_KEY=your_very_secure_secret_key_here

# Cache Configuration
REDIS_URL=redis://redis:6379/0
CACHE_TTL=600

# Security Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/dealerbuilt.crt
SSL_KEY_PATH=/etc/ssl/private/dealerbuilt.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

